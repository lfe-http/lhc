{erl_opts, [debug_info]}.

{lfe_first_files, ["src/lhc.lfe"]}.

{deps, [
   {lutil, ".*", {git, "https://github.com/lfex/lutil.git", {tag, "0.8.1"}}},
   {ljson, ".*", {git, "git://github.com/lfex/ljson.git", {tag, "0.5.1"}}},
   {lcfg, ".*", {git, "git://github.com/lfex/lcfg.git", {tag, "0.4.1"}}}
  ]}.

{plugins, [
   {'lfe-compile', ".*", {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.4.0"}}}
  ]}.

{provider_hooks, [{pre, [{compile, {lfe, compile}}]}]}.

{profiles, [
  {dev, [
    {plugins, [
      {'lfe-version', ".*", {git, "https://github.com/lfe-rebar3/version.git", {tag, "0.3.2"}}},
      {'lfe-clean', ".*", {git, "https://github.com/lfe-rebar3/clean.git", {tag, "0.2.1"}}},
      {'lfe-repl', ".*", {git, "https://github.com/lfe-rebar3/repl.git", {tag, "0.2.1"}}}
      ]}
    ]},
  {test, [
    {eunit_compile_opts, [
      {src_dirs, ["test", "src"]}
      ]},
    {plugins, [
      {'lfe-test', ".*", {git, "https://github.com/lfe-rebar3/test.git", {tag, "0.2.1"}}}
      ]},
    {deps, [
      {ltest, ".*", {git, "git://github.com/lfex/ltest.git", {tag, "0.8.2"}}}
      ]}
    ]},
  {docs, [
    {plugins, [
      {lodox, ".*", {git, "https://github.com/quasiquoting/lodox.git", {tag, "0.12.14"}}}
      ]},
    {lodox,
      [{apps,
        [{exemplar,
          [{'source-uri',
            "https://github.com/lfex/exemplar/blob/{version}/{filepath}#L{line}"},
           {'output-path', "docs/master/current/api"}]}]}
      ]}
    ]}
  ]}.

