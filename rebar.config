{erl_opts, [debug_info, {src_dirs, ["test"]}]}.
{lfe_first_files, ["src/lhc.lfe"]}.
{eunit_compile_opts, [
   {src_dirs, ["test"]}
  ]}.

{deps, [
   {lfe, ".*", {git, "git://github.com/rvirding/lfe.git", {tag, "v0.10.1"}}},
   {lutil, ".*", {git, "https://github.com/lfex/lutil.git", {tag, "0.7.0"}}},
   {ltest, ".*", {git, "git://github.com/lfex/ltest.git", {tag, "0.7.0"}}},
   {ljson, ".*", {git, "git://github.com/lfex/ljson.git", {tag, "0.4.0"}}},
   {lcfg, ".*", {git, "git://github.com/lfex/lcfg.git", {tag, "0.3.0"}}}
  ]}.

{plugins, [
   {'lfe-compile', ".*", {git, "https://github.com/lfe-rebar3/compile.git", {tag, "0.2.0"}}}
  ]}.

{provider_hooks, [
   {pre, [{compile, {lfe, compile}}]}
  ]}.
